<div class="row justify-content-center mt-4">
    <div class="col-lg-4 bg-white rounded shadow-sm p-5">
      <h1 class="mb-3">Task Manager</h1>
      <div id="container">
        <%= form_with model: @task do |f| %>
          <%= f.label :title, {class: "form-label"} %>
          <%= f.text_field :title, {class: "form-control", placeholder: "Title..."} %>
          <%= f.label :details, {class: "form-label"} %>
          <%= f.text_field :details, {class: "form-control", placeholder: "Description..."} %>
          <%= f.submit "Create task", {class: "btn btn-primary"} %>
        <% end %>
      </div>
    </div>
  </div>
